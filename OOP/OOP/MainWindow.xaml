<Window x:Class="OOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
        <Button x:Name="btnDrawLine" Content="Линия" Margin="5" Padding="5" Click="btnDrawLine_Click"/>
        <Button x:Name="btnDrawRectangle" Content="Прямоугольник" Margin="5" Padding="5" Click="btnDrawRectangle_Click"/>
        <Button x:Name="btnDrawEllipse" Content="Эллипс" Margin="5" Padding="5" Click="btnDrawEllipse_Click"/>
         <Button x:Name="btnDrawPolyline" Content="Ломаная" Margin="5" Padding="5" Click="btnDrawPolyline_Click"/>
         <Button x:Name="btnDrawPolygon" Content="Многоугольник" Margin="5" Padding="5" Click="btnDrawPolygon_Click"/>

         <Button x:Name="btnClear" Content="Очистить" Margin="5" Padding="5" Click="btnClear_Click"/>
    </StackPanel>

    <Canvas x:Name="canvas" Grid.Row="1" Background="White" Margin="10"/>
    </Grid>
</Window>
